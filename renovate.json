
{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>tommyd450/actions:centralRenovate.json"
    ],
    "gomod": {
        "schedule": [
          "after 9am on tuesday"
        ],
        "postUpdateOptions": [
          "gomodUpdateImportPaths",
          "gomodTidy"
        ],
        "packageRules": [
          {
            "matchManagers": [
              "gomod"
            ],
            "matchDepTypes": [
              "indirect"
            ],
            "enabled": true
          }
        ]
  },
}
